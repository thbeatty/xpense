<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF2E1"
    tools:context=".ManualEntryActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="576dp"
        android:background="@color/colorPrimaryDark"
        app:itemIconTint="@drawable/nav_new_colors"
        app:itemTextColor="@drawable/nav_new_colors"
        app:menu="@menu/nav_bar_main" />

    <TextView
        android:id="@+id/storeNametextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="66dp"
        android:text="Store Name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="145dp"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/storeName"
        android:layout_width="180dp"
        android:layout_height="43dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="95dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/selectCategoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="320dp"
        android:layout_marginRight="333dp"
        android:text="Budget Category"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="234dp"
        android:layout_height="34dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="350dp"
        android:textSize="14sp"
         />

    <TextView
        android:id="@+id/notesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="410dp"
        android:layout_marginRight="333dp"
        android:text="Notes"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/notes"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="445dp"
        android:inputType="textMultiLine"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/receiptDate"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="170dp"
        android:ems="10"
        android:gravity="start|center_vertical"
        android:hint="MM/DD/YYYY"
        android:paddingStart="1dip"
        android:paddingLeft="1dip"
        android:paddingRight="1dip"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/price"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="258dp"
        android:ems="10"
        android:gravity="left"
        android:inputType="numberDecimal"
        android:textSize="14sp"

         />

    <TextView
        android:id="@+id/priceView"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="230dp"
        android:text="Price"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dolla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="255dp"
        android:text="$"
        android:textSize="16sp" />

</RelativeLayout>
